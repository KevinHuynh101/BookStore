<%- include ('../partials/_header.ejs')  %> 
<div class="jumbotron p-3">
    <div class="d-flex justify-content-center" style="font-size: 25px; color: darkblue;">
        Danh sách các tài khoản
    </div>
    <div class="container mt-2" style="overflow-x: scroll;">
        <table class="table table-bordered bg-light table-responsive-sm" style="width: 100%;">
            <thead>
              <tr>
                
                <th scope="col">Tên đăng nhập</th>
                <th scope="col">Email</th>
                <th scope="col">Mật khẩu</th>
                <th scope="col">Hành động</th>
              </tr>
            </thead>
            <tbody>
                <% users.forEach(user=>{ %>
                    <% if(user.role!=='admin') {%> 
                        <tr>
                           
                           <td style="text-transform: capitalize;"><%= user.userName  %> </td>
                            <td style="text-transform: capitalize;"><%= user.email  %> </td>
                            <td><%= user.password  %> </td>
                            <td>
                                <form action="/users/delete/<%= user._id  %>?_method=DELETE" class="d-inline" method="POST">
                                    <button type="submit" class="btn btn-sm btn-danger">Xóa</button>
                                </form>

                            </td>
                                                        
                        </tr>
                <% } %> 
                <% }) %>
            </tbody>
          </table>
    </div>
</div>


<%- include ('../partials/_footer.ejs') %> 